{
	"version": "2.0.0",	
	"type": "shell",	
	"echoCommand": true,
	"cwd": "${workspaceFolder}",
	"tasks": [
		{
			"label": "run gui",
			"command": "./treesource -gui",
			"group": {
				"kind": "build",
				"isDefault": true
      }
    },
		{
			"label": "build (debug)",
			"command": "go build -o treesource",
			"group": {
				"kind": "build",
				"isDefault": true
      }
    },
 		{
			"label": "build (release)",
			"command": "go build -ldflags='-s -w' -o treesource",
			"group": {
				"kind": "build",
        "isDefault": true
			}
		},		
		{
			"label": "run win32 gui",
			"command": ".\treesource.exe -gui",
			"group": {
				"kind": "build",
				"isDefault": true
      }
    },

		{
			"label": "build win32 (debug)",
			"command": "go build -o treesource.exe",
			"group": {
				"kind": "build",
				"isDefault": true
      }
    },
 		{
			"label": "build win32 (release)",
			"command": "go build -ldflags='-s -w' -o treesource.exe",
			"group": {
				"kind": "build",
        "isDefault": true
			}
		},		
		{
			"label": "generate",
			"command": "go generate",
			"group": {
				"kind": "build",
        "isDefault": true
			}
		}
	]